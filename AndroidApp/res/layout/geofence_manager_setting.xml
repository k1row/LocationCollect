<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/textViewClientID"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="クライアントID (clientid)" />

			<EditText
				android:id="@+id/editTextClientID"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:ems="10" />
				<requestFocus />
			
			<TextView
				android:id="@+id/textViewTmid"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="取得対象端末ID (tmid)" />

			<EditText
				android:id="@+id/editTextTmid"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:ems="10" />
				
			<TextView
				android:id="@+id/textViewSecret"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="OAuth認証用秘密鍵" />

			<EditText
				android:id="@+id/editTextSecret"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:ems="10" />
						
			<TextView
				android:id="@+id/textViewTntp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="取得対象通知種別 (tntp)" />

			<EditText
				android:id="@+id/editTextTntp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:ems="10" />
						
			<TextView
				android:id="@+id/textViewTatp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="取得対象エリア情報種別 (tatp)" />

			<EditText
				android:id="@+id/editTextTatp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:ems="10" />					

			<TextView
				android:id="@+id/textViewNURL"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="通知条件取得先URL" />

			<EditText
				android:id="@+id/editTextNURL"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:ems="10" />

			<TextView
				android:id="@+id/textViewAURL"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="エリア情報取得先URL" />

			<EditText
				android:id="@+id/editTextAURL"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:ems="10" />

			<TextView
				android:id="@+id/textViewSaveInterval"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="40dp"
				android:text="保存間隔" />

			<EditText
				android:id="@+id/editTextSaveInterval"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:ems="10" />
			
			<Button
			    android:id="@+id/btnGMSettingOK"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:onClick="onClick"
				android:text="設定"
			    />

			<Button
			    android:id="@+id/btnGMSettingBackToDefault"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:onClick="onClick"
				android:text="デフォルトに戻す"
			    />

		</LinearLayout>
	</ScrollView>
</LinearLayout>
